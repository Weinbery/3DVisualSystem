<%- include('com/header') %>

  <!-- container section start -->
  <section id="container" class="">

      <%- include('com/navigation') %>

      <%- include('com/sidebar') %>

      <!--main content start-->
      <section id="main-content">
          <section class="wrapper">
		  <div class="row">
				<div class="col-lg-12">
					<h3 class="page-header"><i class="fa fa-files-o"></i> 用户管理</h3>
					<ol class="breadcrumb">
						<li><i class="fa fa-home"></i><a href="index.html">主页</a></li>
						<li><i class="icon_document_alt"></i>用户管理</li>
						<li><i class="fa fa-files-o"></i>用户列表</li>
					</ol>
				</div>
			</div>

              <!-- Form validations -->              
              <div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              用户列表
                          </header>
                          <table>
                              <tr>
                                  <th><input class="form-control" placeholder="搜索" type="text"></th>
                                  <th><input class="form-control" type="submit" value="搜索"></th>
                                  <th><input class="form-control" type="submit" value="添加"></th>
                                  <th><input class="form-control" type="submit" value="删除"></th>
                                  <th><input class="form-control" type="submit" value="修改"></th>
                              </tr>
                          </table>
                          <div class="panel-body">
                              <table class="table bootstrap-datatable countries">
                                  <thead>
                                  <tr>
                                      <th>头像</th>
                                      <th>用户名</th>
                                      <th>角色</th>
                                      <th>备注</th>
                                  </tr>
                                  </thead>
                                  <tbody>
                                  <% users.forEach(function (user) { %>
                                  <tr>
                                      <td><img src="upload/<%- user.avatar %>" style="height:18px; margin-top:-2px;"></td>
                                      <td><%- user.name %></td>
                                      <td><%= ({m: '管理员', f: '一般用户', x: '游客'})[user.gender] %></td>
                                      <td><%- user.bio %></td>
                                  </tr>
                                  <% }) %>
                                  </tbody>
                              </table>
                          </div>
                      </section>
                  </div>
              </div>
          </section>
          <%- include('com/copyright') %>
      </section>
      <!--main content end-->

  </section>
  <!-- container section end -->

    <!-- javascripts -->
    <script src="javascripts/jquery.js"></script>
    <script src="javascripts/bootstrap.min.js"></script>
    <!-- nice scroll -->
    <script src="javascripts/jquery.scrollTo.min.js"></script>
    <script src="javascripts/jquery.nicescroll.js" type="text/javascript"></script>
    <!-- jquery validate js -->
    <script type="text/javascript" src="javascripts/jquery.validate.min.js"></script>

    <!-- custom form validation script for this page-->
    <script src="javascripts/form-validation-script.js"></script>
    <!--custome script for all page-->
    <script src="javascripts/scripts.js"></script>


  </body>
</html>
